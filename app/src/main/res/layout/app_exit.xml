<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:id="@+id/punjabi_news_layout"
    android:background="@drawable/splash">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/best_punjabi_news_linearlayout"
        android:layout_weight="1.3">
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:grid="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:id="@+id/best_punjabi_news_newspaper"
            tools:context="news.TamilNewsPaper.TopNewspaperWebViewActivity"
            android:columnCount="4"
            android:rowCount="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

        </GridLayout>
        <TextView
            android:id="@+id/favourate_punjabi_newspaper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favourate_menu_text"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_centerVertical="true"
            android:textSize="11dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/seperator"/>
    </LinearLayout>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/appExit"
        android:background="@drawable/splash"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:visibility="gone"/>
</LinearLayout>