<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="0dp"
            android:id="@+id/up_news_paper"
            tools:context="news.TamilNewsPaper.TopNewspaperWebViewActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:id="@+id/kannada_news_paper">

            <LinearLayout
                android:id="@+id/all_tamil_newspapers"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/abc_search_url_text_normal"
                android:backgroundTint="@color/white">

                <ImageButton android:id="@+id/home"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:clickable="true"
                    android:onClick="gotoHome"
                    android:background="@drawable/home"
                    android:gravity="center"
                    android:enabled="true"
                    android:padding="0dp"
                    android:hint="Malayalam News Newspaper"
                    android:focusable="true"
                    android:text="Malayalam News Newspaper"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp" />




                <TextView
                    android:id="@+id/textView2"
                    android:layout_height="match_parent"
                    android:text="Share Screenshot"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:onClick="shareWithScreenshoot"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:enabled="true"
                    android:layout_width="100dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_height="match_parent"
                    android:text="Share News"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:onClick="shareNews"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:enabled="true"
                    android:layout_width="80dp" />
                <ImageButton
                    android:id="@+id/ImageButton"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue_500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:onClick="shareNews"
                    android:enabled="true"
                    android:paddingLeft="30dp"
                    android:background="@drawable/share"
                    android:clickable="true"
                    android:layout_width="30dp" />



            </LinearLayout>

            <ProgressBar
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/progressBar1"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse" />

            <WebView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/punjabi_NewsPaper_Webview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scrollbars="none"
                android:layout_alignParentTop="false"
                android:layout_weight="9"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"/>
			<View style="@style/dividerHorizontal"/>
        </LinearLayout>
</GridLayout>
